{
  "manifest_version": 3,
  "name": "Adpocalypse",
  "version": "0.1",
  "description": "A simple open-source ad and tracker blocker prototype with learning mode",

  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "stats.js"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
